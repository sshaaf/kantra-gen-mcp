{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "target/quarkus-app/quarkus-run.jar",
            "label": "Kantra Gen MCP Server JAR"
          },
          {
            "path": "target/kantra-gen-mcp-*-runner",
            "label": "Kantra Gen MCP Server Linux Native"
          },
          {
            "path": "target/kantra-gen-mcp-*-runner.exe",
            "label": "Kantra Gen MCP Server Windows Native"
          }
        ]
      }
    ]
  ]
}
